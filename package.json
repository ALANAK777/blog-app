{
  "name": "revoltronx-blog-editor",
  "version": "1.0.0",
  "description": "Full-stack blog editor with auto-save draft feature",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-deps": "cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && ./node_modules/.bin/react-scripts build",
    "vercel-build": "cd frontend && ./node_modules/.bin/react-scripts build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 